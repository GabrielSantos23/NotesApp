{
  "$schema": "../../../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Notes",
  "version": "0.1.0",
  "identifier": "com.notes.app",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:3001",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "transparent": true,
        "decorations": false,
        "title": "Notes",
        "resizable": true,
        "fullscreen": false,
        "width": 1200,
        "height": 800,
        "center": true,
        "minWidth": 800,
        "minHeight": 600,
        "titleBarStyle": "Overlay",
        "skipTaskbar": false,
        "alwaysOnTop": false,
        "visible": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
